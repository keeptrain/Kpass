<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.keep.category.adapter.CategoryAdapterEvent"/>

        <variable
            name="eventListener"
            type="CategoryAdapterEvent" />
    </data>

<LinearLayout
    android:id="@+id/edt_category_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="@{(view) -> eventListener.addCategory()}">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edl_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_category"
            android:hint="@string/new_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
</layout>